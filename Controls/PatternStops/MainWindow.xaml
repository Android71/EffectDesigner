<Window x:Class="PatternStops.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Xam.Wpf.Controls;assembly=PatternControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PatternStops"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Controls:MultiSlider Grid.Row="0" SliderSet="MultiSlider_SliderSet" ValueChanged="MultiSlider_ValueChanged" Minimum="1" Maximum="1000" Margin="10,20" />
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ListBox x:Name="listBox"
                 Grid.Column="0"
                 MinWidth="150"
                 HorizontalAlignment="Left" />
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBox Name="position" Width="100" HorizontalAlignment="Left" BorderBrush="Black"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
