<Window x:Class="PatternStops.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Xam.Wpf.Controls;assembly=PatternControls"
        xmlns:PatternControls="clr-namespace:PatternControls;assembly=PatternControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PatternStops"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1205.082"
        Height="462.163"
        mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
                <PatternControls:ColorPanel />
            <StackPanel>
                <StackPanel Height="255" Width="960" Background="#FF595656">
                    
                </StackPanel>
               <Controls:MultiSlider 
                              Margin="10,20"
                              Maximum="990"
                              Pattern="{Binding Pattern}"
                              SelectedPoint="{Binding SelectedPoint,Mode=TwoWay}" /> 
            </StackPanel>
            <ListBox x:Name="listBox"
                     MinWidth="10"
                     HorizontalAlignment="Left"
                     ItemsSource="{Binding Pattern}"
                     SelectedIndex="{Binding SelectedPatternIx}"
                     SelectedItem="{Binding SelectedPoint}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Width="50"
                               HorizontalContentAlignment="Center"
                               Background="{Binding PointBrush}"
                               BorderBrush="Black"
                               BorderThickness="1"
                               Content="{Binding LedPos}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
