<UserControl x:Class="PatternControls.ColorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PatternControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="LightGray"
             d:DesignHeight="363"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <Grid>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="43*" />
            </Grid.ColumnDefinitions>

            <UniformGrid x:Name="colorSelector"
                         Grid.Column="0"
                         Width="25"
                         Columns="1"
                         Rows="13"
                         SnapsToDevicePixels="True" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Slider x:Name="hue"
                            Grid.Row="0"
                            Height="255"
                            Margin="10,10,10,0"
                            HorizontalAlignment="Center"
                            IsEnabled="False"
                            Orientation="Vertical"
                            SmallChange="1"
                            ValueChanged="hsb_ValuesChanged" GotMouseCapture="hue_GotMouseCapture" />
                    <TextBlock Grid.Row="1"
                               Margin="0,5"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="H" />
                    <Border Grid.Row="2"
                            Margin="5,0"
                            BorderBrush="#FF595656"
                            BorderThickness="1">
                        <TextBlock x:Name="hueValue"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Value,
                                                  ElementName=hue,
                                                  StringFormat={}{0:N0}}" />
                    </Border>
                    <TextBlock Grid.Row="3"
                               Margin="0,5"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="R" />
                    <Border Grid.Row="4"
                            Margin="5,0"
                            BorderBrush="#FF595656"
                            BorderThickness="1">
                        <TextBlock x:Name="rValue"
                                   Margin="0"
                                   HorizontalAlignment="Center" />
                    </Border>

                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Slider x:Name="sat"
                            Grid.Row="0"
                            Height="255"
                            Margin="10,10,10,0"
                            HorizontalAlignment="Center"
                            IsEnabled="False"
                            Maximum="100"
                            Orientation="Vertical"
                            SmallChange="1"
                            ValueChanged="hsb_ValuesChanged" GotMouseCapture="hue_GotMouseCapture" />
                    <TextBlock Grid.Row="1"
                               Margin="0,5"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="S" />
                    <Border Grid.Row="2"
                            Margin="5,0"
                            BorderBrush="#FF595656"
                            BorderThickness="1">
                        <TextBlock x:Name="satValue"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Value,
                                                  ElementName=sat,
                                                  StringFormat={}{0:N0}}" />
                    </Border>
                    <TextBlock Grid.Row="3"
                               Margin="0,5"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="G" />
                    <Border Grid.Row="4"
                            Margin="5,0"
                            BorderBrush="#FF595656"
                            BorderThickness="1">
                        <TextBlock x:Name="gValue"
                                   Margin="0"
                                   HorizontalAlignment="Center" />
                    </Border>

                </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Slider x:Name="bri"
                            Grid.Row="0"
                            Height="255"
                            Margin="10,10,10,0"
                            HorizontalAlignment="Center"
                            IsEnabled="False"
                            Maximum="100"
                            Orientation="Vertical"
                            SmallChange="1"
                            ValueChanged="hsb_ValuesChanged" GotMouseCapture="hue_GotMouseCapture" IsMouseCapturedChanged="bri_IsMouseCapturedChanged"/>
                    <TextBlock Grid.Row="1"
                               Margin="0,5"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="B" />
                    <Border Grid.Row="2"
                            Margin="5,0"
                            BorderBrush="#FF595656"
                            BorderThickness="1">
                        <TextBlock x:Name="briValue"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Value,
                                                  ElementName=bri,
                                                  StringFormat={}{0:N0}}" />
                    </Border>
                    <TextBlock Grid.Row="3"
                               Margin="0,5"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Text="B" />
                    <Border Grid.Row="4"
                            Margin="5,0"
                            BorderBrush="#FF595656"
                            BorderThickness="1">
                        <TextBlock x:Name="bValue"
                                   Margin="0"
                                   HorizontalAlignment="Center" />
                    </Border>

                </Grid>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
