                <GroupBox>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <RadioButton x:Name="PART_PointBtn"
                                     Margin="0,5,20,0"
                                     Content="Точка"
                                     IsChecked="True" />
                        <RadioButton x:Name="PART_RangeBtn"
                                     Margin="0,5,20,0"
                                     Content="Диапазон" />
                    </StackPanel>
                </GroupBox>
                <StackPanel Height="275" Background="#FF595656">
                    <ItemsControl Height="255"
                                  Margin="10"
                                  ItemsSource="{Binding StripModel,
                                                        RelativeSource={RelativeSource TemplatedParent}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid x:Name="PART_StripDisplay" Rows="1" SnapsToDevicePixels="False"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Rectangle Height="{Binding PointBrightness,
                                                            Converter={StaticResource converter}}"
                                           VerticalAlignment="Bottom"
                                           Fill="{Binding PureBrush}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
