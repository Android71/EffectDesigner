                </StackPanel>

                <Grid Margin="10,0">
                    <Grid.Resources>
                        <Style TargetType="lc:SliderItem">
                            <Setter Property="Template" Value="{StaticResource SupportiveSliderTemplate}" />
                            <Setter Property="Grid.Row" Value="1" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Name="PART_SliderGrid_Up" Grid.Row="0">
                        <!--  Odd SliderItem instance get inserted here  -->
                    </Grid>
                    <Border Grid.Row="1"
                            Height="4"
                            VerticalAlignment="Center"
                            BorderBrush="{TemplateBinding TrackBrush}"
                            BorderThickness="2" />
                    <Grid x:Name="PART_SliderGrid_Down" Grid.Row="2">
                        <!--  Even SliderItem instance get inserted here  -->
                    </Grid>
                </Grid>

                <DockPanel Margin="0,10,0,0">
                    <Grid Width="30" DockPanel.Dock="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Button x:Name="PART_AddBtn" Content=" + " />
                        <Button x:Name="PART_RemoveBtn"
                                Grid.Row="1"
                                Content=" - " />
                    </Grid>

                    <Grid x:Name="PART_ControlBlock" DockPanel.Dock="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button x:Name="incrementBtn"
                                Grid.Column="0"
                                Content=" - " />
                        <Label x:Name="valueLbl"
                               Grid.Column="1"
                               Width="50"
                               HorizontalContentAlignment="Center"
                               BorderBrush="Black"
                               BorderThickness="1" />
                        <Button x:Name="decrementBtn"
                                Grid.Column="2"
                                Content=" + " />
                    </Grid>

                    <ListBox x:Name="listBox"
                             Background="#FF686868"
                             ItemTemplateSelector="{StaticResource dataTemplateSelector}"
                             ItemsSource="{Binding Pattern,
                                                   RelativeSource={RelativeSource TemplatedParent}}"
                             ScrollViewer.HorizontalScrollBarVisibility="Visible"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             SelectedIndex="{Binding SelectedPatternIx}"
                             SelectedItem="{Binding SelectedPoint}">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>

                </DockPanel>
            </StackPanel>
        </Border>
